<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/rex03skvfjpi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#A13EF8"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Status Bar -->
            <LinearLayout
                android:id="@+id/roaedftiee9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginBottom="42dp"
                android:orientation="horizontal"/>

            <!-- Sign Up Form -->
            <LinearLayout
                android:id="@+id/rpk9l5v2oebk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white_bg"
                android:paddingVertical="22dp"
                android:layout_marginBottom="58dp"
                android:layout_marginHorizontal="26dp"
                android:orientation="vertical">

                <!-- Header with Icon -->
                <LinearLayout
                    android:id="@+id/rnv2t7r3bxy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="22dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rkvdow1ny7wb"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="68dp"
                        android:src="@drawable/backbutton"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/rr18kectgbe"
                        android:textColor="#441D83"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Sign Up"/>
                </LinearLayout>

                <!-- Welcome Message -->
                <LinearLayout
                    android:id="@+id/rew6nui4wxw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/r5d2sx07futl"
                        android:textColor="#441D83"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Welcome to Title Vista!"/>
                </LinearLayout>

                <!-- Username Field -->
                <TextView
                    android:id="@+id/rokmvx42k15"
                    android:textColor="#441D83"
                    android:textSize="15sp"
                    android:layout_marginStart="37dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Username"/>

                <LinearLayout
                    android:id="@+id/rdxjypxvn967"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginBottom="2dp"
                    android:layout_marginHorizontal="29dp"
                    android:orientation="vertical"/>

                <!-- Email Field -->
                <TextView
                    android:id="@+id/r0kpvucr74nf"
                    android:textColor="#441D83"
                    android:textSize="15sp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="37dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Email"/>

                <LinearLayout
                    android:id="@+id/rxlnnp4mr5os"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="29dp"
                    android:orientation="vertical"/>

                <!-- Password Field -->
                <TextView
                    android:id="@+id/r1aa78c7669n"
                    android:textColor="#441D83"
                    android:textSize="15sp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="37dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Password"/>

                <LinearLayout
                    android:id="@+id/roza86cx5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:background="@drawable/edit_text_bg"
                    android:paddingVertical="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="29dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ry913ewsaofi"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/show_password_icon"
                        android:scaleType="fitXY"/>
                </LinearLayout>


                <!-- Confirm Password Field -->
                <TextView
                    android:id="@+id/rxy5dsgs041"
                    android:textColor="#441D83"
                    android:textSize="15sp"
                    android:layout_marginStart="37dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Confirm Password"/>

                <LinearLayout
                    android:id="@+id/rrtbn7v8wtz7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:background="@drawable/edit_text_bg"
                    android:paddingVertical="5dp"
                    android:layout_marginBottom="21dp"
                    android:layout_marginHorizontal="29dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rx5nerm3vofs"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/show_password_icon"
                        android:scaleType="fitXY"/>
                </LinearLayout>

                <!-- Sign Up Button -->
                <LinearLayout
                    android:id="@+id/rrmlwluu6d0b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="19dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rylpu2iadgsp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_bg"
                        android:paddingVertical="14dp"
                        android:paddingHorizontal="68dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sign_up_button_text"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="SIGN UP"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- OR Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="19dp"
                    android:layout_marginHorizontal="29dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#441D83"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:textColor="#441D83"
                        android:textSize="15sp"
                        android:layout_marginHorizontal="8dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#441D83"/>
                </LinearLayout>

                <!-- Social Login Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/google_login_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_google"
                        android:layout_marginEnd="16dp"
                        android:scaleType="fitCenter"/>

                    <ImageView
                        android:id="@+id/facebook_login_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_facebook"
                        android:scaleType="fitCenter"/>
                </LinearLayout>

                <!-- Already have an account? -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an Account?"
                        android:textColor="#441D83"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/sign_in_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign in"
                        android:textColor="#441D83"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>