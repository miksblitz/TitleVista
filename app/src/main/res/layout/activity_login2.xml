<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/r2e4zkkzksyn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#A13EF8"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/r5r65ndk4l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginBottom="57dp"
                android:orientation="horizontal"/>

            <LinearLayout
                android:id="@+id/r71c4y7f77um"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white_bg"
                android:paddingTop="24dp"
                android:paddingBottom="51dp"
                android:layout_marginBottom="122dp"
                android:layout_marginHorizontal="26dp"
                android:orientation="vertical">

                <!-- Title: Sign In -->
                <LinearLayout
                    android:id="@+id/rkk1j95tg8ba"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rqjiri6s8a5"
                        android:textColor="#441D83"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Sign In"/>
                </LinearLayout>

                <!-- Subtitle -->
                <LinearLayout
                    android:id="@+id/r8nf8p12ma9h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="22dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rhhmtxzevu79"
                        android:textColor="#441D83"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Enter your details to continue"/>
                </LinearLayout>

                <!-- Email Input -->
                <TextView
                    android:id="@+id/rily3j8ons"
                    android:textColor="#441D83"
                    android:textSize="15sp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="37dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Email"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginBottom="13dp"
                    android:layout_marginHorizontal="29dp"
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:hint="Enter your email"/>

                <!-- Password Input -->
                <TextView
                    android:id="@+id/rjh8qy4txg2"
                    android:textColor="#441D83"
                    android:textSize="15sp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="37dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Password"/>

                <LinearLayout
                    android:id="@+id/rjgk1c8vc92l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginBottom="25dp"
                    android:layout_marginHorizontal="29dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"

                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:hint="Enter your password"/>

                    <ImageView
                        android:id="@+id/r2dmms0uiefn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/show_password_icon" />
                </LinearLayout>

                <!-- Sign In Button -->
                <LinearLayout
                    android:id="@+id/rm9oax2hvc5i"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="17dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rcobws5ttzno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_bg"
                        android:paddingVertical="14dp"
                        android:paddingHorizontal="68dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/rj8kdalx2y9d"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="SIGN IN"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- OR Divider -->
                <LinearLayout
                    android:id="@+id/rmj6prolct8l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="29dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/rkn2kbftncac"
                        android:layout_width="138dp"
                        android:layout_height="1dp"
                        android:background="#441D83"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical"/>

                    <TextView
                        android:id="@+id/rn8nn9b304b9"
                        android:textColor="#441D83"
                        android:textSize="15sp"
                        android:layout_marginEnd="3dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="OR"/>

                    <LinearLayout
                        android:id="@+id/rkbggq19p67o"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#441D83"
                        android:orientation="vertical"/>
                </LinearLayout>

                <!-- Sign Up Link -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="#441D83"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Donâ€™t have an account? "/>

                    <TextView
                        android:id="@+id/tvSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Sign Up"
                        android:textColor="#441D83"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>